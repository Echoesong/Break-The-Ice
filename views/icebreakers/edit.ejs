<%- include("../partials/header", {title}) %>

<!-- Eventually, put a 'back to Icebreaker' button -->
<div class="container d-grip gap-2">

    <form action="/icebreakers/<%=icebreaker._id%>?_method=PUT" method="POST">

        <div class="form-floating mb-3">
            <input type="text" name="content" class="form-control" id="editContent" placeholder="Edit your question" value="<%=icebreaker.content%>">
            <label for="editContent">Edit your question</label>
        </div>

        <div class="form-floating">
            <select class="form-select" id="editTopic" aria-label="Change the topic" name="topic">
                <option value="Travel">Travel</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Food">Food</option>
                <option value="Misc">Misc</option>
            </select>
            <label for="editTopic">Change the Topic</label>
        </div>

        <div class="d-grid gap-2 col-5 mx-auto">
            <button class="btn btn-primary" type='submit'>Submit</button>
        </div>

    </form>

</div>

<%- include("../partials/footer") %>