<%- include("../partials/header", {title}) %>

    <div class="container">
        <form action="/icebreakers/<%=icebreaker._id%>?_method=PUT" method="POST">

            <div class="form-floating mb-3">
                <input type="text" name="content" class="form-control" id="editContent" placeholder="Edit your question" value="<%=icebreaker.content%>">
                <label for="editContent">Edit your question</label>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" id="editTopic" aria-label="Change the topic" name="topic">
                    <option value="Activities" <%= icebreaker.topic === 'Activites' ? 'selected' : '' %>>
                        Activities
                    </option>
                    <option value="Animals" <%= icebreaker.topic === 'Animals' ? 'selected' : '' %>>
                        Animals
                    </option>
                    <option value="Entertainment" <%= icebreaker.topic === 'Entertainment' ? 'selected' : '' %>>
                        Entertainment
                    </option>
                    <option value="Food" <%= icebreaker.topic === 'Food' ? 'selected' : '' %>>
                        Food
                    </option>
                    <option value="Health" <%= icebreaker.topic === 'Health' ? 'selected' : '' %>>
                        Health
                    </option>
                    <option value="Misc" <%= icebreaker.topic === 'Misc' ? 'selected' : '' %>>
                        Misc
                    </option>
                    <option value="Travel" <%= icebreaker.topic === 'Travel' ? 'selected' : '' %>>
                        Travel
                    </option>
                </select>
                <label for="editTopic">Change the Topic</label>
            </div>

            <div class="d-grid gap-2 col-4 mx-auto">
                <button class="btn btn-primary btn-md" type='submit'>Submit</button>
            </div>

        </form>
    </div>

<%- include("../partials/footer") %>