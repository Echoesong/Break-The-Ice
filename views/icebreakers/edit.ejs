<%- include("../partials/header", {title}) %>

<!-- Eventually, put a 'back to Icebreaker' button -->

<ul>
    <li>Ice Breaker: <%= icebreaker.content%></li>
    <li>Topic: <%= icebreaker.topic%></li>
</ul>
<form action="/icebreakers/<%=icebreaker._id%>?_method=PUT" method="POST">
    <label>Icebreaker:
        <input type="text" name="content" value="<%=icebreaker.content%>">
    </label>
    <br>
    <label> Topic
        <select name="topic">
            <option value="Travel">Travel</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Food">Food</option>
            <option value="Misc">Misc</option>
        </select>
    </label>
    <br><button type="submit">Submit</button>
</form>



<%- include("../partials/footer") %>